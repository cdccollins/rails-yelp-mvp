<div class="container">
  <h1>The Restaurants</h1>

  <% @restaurants.each do |restaurant| %>
    <ul>
      <li>
        <%= restaurant.name %> | <%= restaurant.category.capitalize %> | <%= restaurant.address %>
        <%= link_to "Further Details", restaurant_path(restaurant) %>
      </li>
    </ul>
  <% end %>

  <%= link_to "Add a new restaurant", new_restaurant_path %>

</div>
