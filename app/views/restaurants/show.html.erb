<div class="container">
  <h1> <%= @restaurant.name %> </h1>
  <p class="details">
    <%= @restaurant.category.capitalize %> | <%= @restaurant.address %> | <%= @restaurant.phone_number %>
  </p>

  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li> <%= review.content %> | <%= review.rating %> stars </li>
    <% end %>
  </ul>

  <h1>Add a new review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.button :submit %>
  <% end %>

</div>
